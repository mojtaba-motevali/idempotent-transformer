{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "."
  },
  "lib": ["ES2024", "DOM"], // Used by @msgpack/msgpack
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 